<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Colegio1258</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <!-- Simple bar CSS -->
    <link rel="stylesheet" href="~/css/simplebar.css" />
    <!-- Fonts CSS -->
    <link href="https://fonts.googleapis.com/css2?family=Overpass:ital,wght@0,100;0,200;0,300;0,400;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet" />
    <!-- Icons CSS -->
    <link rel="stylesheet" href="~/css/feather.css" />
    <!-- Date Range Picker CSS -->
    <link rel="stylesheet" href="~/css/daterangepicker.css" />
    <!--CSS from razors-->
    @if (IsSectionDefined("AddToHead"))
    {
        @RenderSection("AddToHead", required: false)
    }
    <!-- App CSS -->
    <link rel="stylesheet" href="~/css/app-light.css" id="lightTheme" />
    <link rel="stylesheet" href="~/css/app-dark.css" id="darkTheme" disabled />
</head>
<body class="vertical  light  ">
    <div class="wrapper">
        <nav class="topnav navbar navbar-light">
            <button type="button" class="navbar-toggler text-muted mt-2 p-0 mr-3 collapseSidebar">
                <i class="fe fe-menu navbar-toggler-icon"></i>
            </button>
            <ul class="nav">
                <li class="nav-item">
                    <a class="nav-link text-muted my-2" href="#" id="modeSwitcher" data-mode="light">
                        <i class="fe fe-sun fe-16"></i>
                    </a>
                </li>

                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle text-muted pr-0" href="#" id="navbarDropdownMenuLink" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <span class="avatar avatar-sm mt-2">
                            <img src="~/img/icon.jpg" alt="..." class="avatar-img rounded-circle">
                        </span>
                    </a>
                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdownMenuLink">
                        @if (this.User.IsInRole("Docente") || this.User.IsInRole("Directivo"))
                        {
                            <a class="dropdown-item" asp-controller="Home" asp-action="Profile">Perfil</a>
                        }
                        <a class="dropdown-item" asp-controller="UserAuthentication" asp-action="Logout">Cerrar Sesión</a>
                    </div>
                </li>
            </ul>
        </nav>
        <aside class="sidebar-left border-right bg-white shadow" id="leftSidebar" data-simplebar>
            <a href="#" class="btn collapseSidebar toggle-btn d-lg-none text-muted ml-2 mt-3" data-toggle="toggle">
                <i class="fe fe-x"><span class="sr-only"></span></i>
            </a>
            <nav class="vertnav navbar navbar-light">
                <!-- nav bar -->
                <div class="w-100 mb-4 d-flex">
                    <a asp-controller="Home" action="Index" class="navbar-brand mx-auto mt-2 flex-fill text-center">
                        <svg version="1.1" id="logo" class="navbar-brand-img brand-sm" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px" viewBox="0 0 120 120" xml:space="preserve">
                        <g>
                        <polygon class="st0" points="78,105 15,105 24,87 87,87" />
                        <polygon class="st0" points="96,69 33,69 42,51 105,51" />
                        <polygon class="st0" points="78,33 15,33 24,15 87,15" />
                </g>
              </svg>
                    </a>
                </div>

                <p class="text-muted nav-heading mt-4 mb-1">
                    <span>Contenido</span>
                </p>
                <ul class="navbar-nav flex-fill w-100 mb-2">
                    @if (this.User.IsInRole("Administrador"))
                    {
                        <li class="nav-item w-100">
                            <a class="nav-link" asp-area="" asp-controller="Users" asp-action="Index">
                                <i class="fe fe-user fe-16"></i>
                                <span class="ml-3 item-text">Usuarios</span>
                            </a>
                        </li>
                    }

                    @if (this.User.IsInRole("Administrador") || this.User.IsInRole("Directivo"))
                    {
                        <li class="nav-item w-100">
                            <a class="nav-link" hasp-area="" asp-controller="Staff" asp-action="Index">
                                <i class="fe fe-briefcase fe-16"></i>
                                <span class="ml-3 item-text">Personal</span>
                            </a>
                        </li>
                    }
                    <li class="nav-item w-100">
                        <a class="nav-link" asp-area="" asp-controller="Students" asp-action="Index">
                            <i class="fe fe-smile fe-16"></i>
                            <span class="ml-3 item-text">Alumnos</span>
                        </a>
                    </li>
                    <li class="nav-item w-100">
                        <a class="nav-link" asp-area="" asp-controller="Grades" asp-action="Index">
                            <i class="fe fe-award fe-16"></i>
                            <span class="ml-3 item-text">Notas</span>
                        </a>
                    </li>
                    <li class="nav-item w-100">
                        <a class="nav-link" asp-area="" asp-controller="Attendance" asp-action="Index">
                            <i class="fe fe-clock fe-16"></i>
                            <span class="ml-3 item-text">Asistencia</span>
                        </a>
                    </li>


                    <li class="nav-item w-100">
                        <a class="nav-link" asp-controller="Reports" asp-action="Index">
                            <i class="fe fe-file-text fe-16"></i>
                            <span class="ml-3 item-text">Informes</span>
                        </a>
                    </li>

                </ul>

                @if (this.User.IsInRole("Docente"))
                {
                    <div class="btn-box w-100 mt-4 mb-1">
                        <a class="btn mb-2 btn-primary btn-lg btn-block" asp-controller="Home" asp-action="Help">
                            <i class="fe fe-alert-octagon fe-12 mx-2"></i><span class="small">Ayuda</span>
                        </a>
                    </div>
                }
            </nav>
        </aside>


        <!--CONTENT--->
        <main role="main" class="main-content">
            <div class="container-fluid">
                @RenderBody()
                <hr />
                <footer>
                    <p>&copy; @DateTime.Now.Year - I.E N° 1258 Sebastián Lorente de Huaycán</p>
                </footer>
            </div> <!-- .container-fluid -->

        </main> <!-- main -->
    </div> <!-- .wrapper -->
    <script src="~/js/jquery.min.js" type="text/javascript"></script>
    <script src='~/js/jquery.validate.min.js' type="text/javascript"></script>
    <script src="~/js/popper.min.js" type="text/javascript"></script>
    <script src="~/js/moment.min.js" type="text/javascript"></script>
    <script src="~/js/bootstrap.min.js" type="text/javascript"></script>
    <script src="~/js/simplebar.min.js" type="text/javascript"></script>
    <script src='~/js/daterangepicker.js' type="text/javascript"></script>
    <script src='~/js/jquery.stickOnScroll.js' type="text/javascript"></script>
    <script src="~/js/tinycolor-min.js" type="text/javascript"></script>
    <script src="~/js/config.js" type="text/javascript"></script>
    @RenderSection("scripts", required: false)
    <script src="~/js/apps.js"></script>
    @RenderSection("SingleScripts", required: false)
</body>

</html>
