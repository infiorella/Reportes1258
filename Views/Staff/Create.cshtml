@model Models.PersonalEducativo


@{
    ViewData["Title"] = "Crear Personal";
}

@section AddToHead{
    <link href="@Url.Content("~/css/select2.css")" rel="stylesheet" type="text/css" />
}

<div class="row justify-content-center">
    <div class="col-12">
        <h2 class="page-title">Personal</h2>
        <p class="text-muted">Registro de Personal</p>
        @if (TempData["msg"] != null)
        {
            @if (TempData["Status"].ToString() == "1")
            {

                <div class="alert alert-success" role="alert">
                    <span class="fe fe-smile fe-16 mr-2"></span> @TempData["msg"]
                </div>

            }
            else
            {
                <div class="alert alert-danger" role="alert">
                    <span class="fe fe-alert-triangle fe-16 mr-2"></span> @TempData["msg"]
                </div>
            }
        }
        <div class="card shadow mb-4">
            <div class="card-header">                
                <strong class="card-title"><a asp-action="Index"><span class="fe fe-24 fe-arrow-left"></span></a> Personal</strong>
            </div>
            <br />
            <form asp-action="Edit">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group mb-3">
                                <label asp-for="Dni" class="control-label">DNI *</label>
                                <input asp-for="Dni" class="form-control" />
                                <span asp-validation-for="Dni" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label asp-for="Telefono" class="control-label">Teléfono *</label>
                                <input asp-for="Telefono" class="form-control" />
                                <span asp-validation-for="Telefono" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label asp-for="Grado" class="control-label">Grado</label>
                                <input asp-for="Grado" class="form-control" />
                                <span asp-validation-for="Grado" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label asp-for="Seccion" class="control-label">Sección</label>
                                <input asp-for="Seccion" class="form-control" />
                                <span asp-validation-for="Seccion" class="text-danger"></span>
                            </div>
                           
                            <div class="form-group mb-3">
                                <label asp-for="CorreoElectronico" class="control-label">Correo Electrónico</label>
                                <input asp-for="CorreoElectronico" type="email" class="form-control" />
                                <span asp-validation-for="CorreoElectronico" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label for="customFile">Imagen</label>
                                <div class="custom-file">
                                    <input type="file" accept="image/png,image/jpeg" class="custom-file-input" id="Imagen">
                                    <label class="custom-file-label" for="customFile">Escoger Imagen</label>
                                </div>
                            </div>
                        </div> <!-- /.col -->
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="Apellidos" class="control-label">Apellidos *</label>
                                <input asp-for="Apellidos" class="form-control" />
                                <span asp-validation-for="Apellidos" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label asp-for="Nombres" class="control-label">Nombres *</label>
                                <input asp-for="Nombres" class="form-control" />
                                <span asp-validation-for="Nombres" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label asp-for="Direccion" class="control-label">Dirección</label>
                                <input asp-for="Direccion" class="form-control" />
                                <span asp-validation-for="Direccion" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label asp-for="FechaNacimiento" class="control-label">Fecha de Nacimiento</label>
                                <input asp-for="FechaNacimiento" type="date" class="form-control" />
                                <span asp-validation-for="FechaNacimiento" class="text-danger"></span>
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="Rol" class="control-label">Rol</label>
                                <select asp-for="Rol" class="form-control">
                                    <option value="1">Docente a Tiempo Completo</option>
                                    <option value="2">Docente a Tiempo Parcial</option>
                                    <option value="3">Directivo</option>
                                </select>
                                <span asp-validation-for="Rol" class="text-danger"></span>
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="IdUsuario" class="control-label">Usuario</label>
                                <select asp-for="IdUsuario" class="form-control select2" asp-items="ViewBag.IdUsuario">
                                    <option selected>--Seleccione--</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <p><small>Los campos que tengan el símbolo (*) se deben completar de manera obligatoria</small></p>
                    <br />
                    <div class="d-flex justify-content-center form-group">
                        <input type="submit" value="Guardar" class="btn btn-primary" />
                    </div>
                </div>
            </form>
        </div> <!-- / .card -->
        <!-- end section -->
    </div> <!-- .col-12 -->
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src='~/js/select2.min.js'></script>
    <script src="~/js/Content/Staff.js" asp-append-version="true"></script>
    <script>
        $('.select2').select2(
            {
                theme: 'bootstrap4',
            });


    </script>
}
