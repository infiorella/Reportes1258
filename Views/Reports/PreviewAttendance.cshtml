@model Models.Informe

@{
    ViewData["Title"] = "Informe Generado";
}


<div class="col-12">
    <div class="row align-items-center my-3">
        <div class="col">
            <h2 class="page-title">Vista Previa de Informe de asistencia</h2>
            <p>Informe Generado por el Sistema</p>
        </div>

        <div class="col-auto">
            <a asp-action="SendEmail" class="btn btn-lg btn-primary" asp-route-id="@Model.IdInforme" ><i class="fe fe-mail fe-16 mr-3"></i>Enviar Correo</a>           
        </div>
    </div>
</div>


<div class="tab-pane active" style="width: 100%; height: 100%" id="dokument">
    <iframe width="100%" height="600" width="800" src="@Url.Action("ViewPDFAttendance", "Reports", Model)"></iframe>
</div>
