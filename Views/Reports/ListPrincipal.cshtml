@model IEnumerable<Models.Views.ReportModel>

@{
    ViewData["Title"] = "Informes";
}

@section AddToHead{
    <link href="@Url.Content("~/css/dataTables.bootstrap4.css")" rel="stylesheet" type="text/css" />
}

<div class="row justify-content-center">
    <div class="col-12">
        <div class="row align-items-center my-4">
            <div class="col">
                <h2 class="mb-2 page-title">Lista de Informes</h2>
                <p class="card-text">Informes Recibidos</p>
            </div>
        </div>

        <div class="row my-4">
            <!-- Small table -->
            <div class="col-md-12">
                <div class="card shadow">
                    <div class="card-body">
                        <!-- table -->
                        <table class="table datatables" id="ListReports">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Nombre de Informe</th>
                                    <th>Creador</th>
                                    <th>Descripción</th>
                                    <th>Fecha Creación</th>
                                    <th>Tipo</th>
                                    <th>Estado</th>
                                    <th>Acción</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.IdInforme</td>
                                        <td>@item.Titulo</td>
                                        <td>@item.PersonalNombre</td>
                                        <td>@item.Descripcion</td>
                                        <td>@item.FechaCreacion</td>
                                        <td>@item.Tipo</td>
                                        <td><span class="badge badge-secondary @item.Color">@item.EstadoInforme</span></td>
                                        <td>
                                            <a class="btn btn-primary" onclick="ApproveReport(@item.IdInforme)" style="color: white;"><i class="fe fe-thumbs-up fe-12 mr-4"></i>Aprobar</a>
                                            <a class="btn btn-primary" onclick="DisapproveReport(@item.IdInforme)" style="color: white;"><i class="fe fe-thumbs-down fe-12 mr-4"></i>Desaprobar</a>
                                        </td>
                                    </tr>

                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div> <!-- simple table -->
        </div> <!-- end section -->
    </div> <!-- .col-12 -->
</div> <!-- .row -->
@section scripts
    {
    <script src='~/js/jquery.dataTables.min.js'></script>
    <script src='~/js/dataTables.bootstrap4.min.js'></script>
    <script src="~/js/sweetalert.min.js"></script>
    <script src="~/js/Content/Reports.js" type="text/javascript"></script>
}