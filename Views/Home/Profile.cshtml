@model Models.PersonalEducativo

@{
    ViewData["Title"] = "Perfil";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-12">
    <div class="row align-items-center my-3">
        <div class="col">
            <h2 class="page-title">Perfil</h2>
            <p>@Model.Nombres @Model.Apellidos</p>
        </div>
        @if (TempData["msg"] != null)
        {
            @if (TempData["Status"].ToString() == "1")
            {

                <div class="alert alert-success" role="alert">
                    <span class="fe fe-smile fe-16 mr-2"></span> @TempData["msg"]
                </div>

            }
            else
            {
                <div class="alert alert-danger" role="alert">
                    <span class="fe fe-alert-triangle fe-16 mr-2"></span> @TempData["msg"]
                </div>
            }
        }
        <form asp-action="EditProfile">
            <hr class="my-4">
            <input asp-for="IdPersonal" class="form-control"hidden />
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="Telefono" class="control-label">Teléfono *</label>
                    <input asp-for="Telefono" class="form-control" />
                    <span asp-validation-for="Telefono" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                <label asp-for="CorreoElectronico" class="control-label">Correo Electrónico</label>
                <input asp-for="CorreoElectronico" type="email" class="form-control" />
                <span asp-validation-for="CorreoElectronico" class="text-danger"></span>
                </div>
            </div>


            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="Direccion" class="control-label">Dirección</label>
                    <input asp-for="Direccion" class="form-control" />
                    <span asp-validation-for="Direccion" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="FechaNacimiento" class="control-label">Fecha de Nacimiento</label>
                    <input asp-for="FechaNacimiento" type="date" class="form-control" />
                    <span asp-validation-for="FechaNacimiento" class="text-danger"></span>
                </div>
            </div>


            <div class="form-row">
                <label for="customFile">Imagen</label>
                <div class="custom-file">
                    <input type="file" accept="image/png,image/jpeg" class="custom-file-input" id="Imagen">
                    <label class="custom-file-label" for="customFile">Escoger Imagen</label>
                </div>
            </div>

            <br />
            <div class="d-flex justify-content-center form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>

    </div>
</div>
