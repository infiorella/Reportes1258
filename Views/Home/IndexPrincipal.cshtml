@model Models.Views.DirectorIndexModel

@{
    ViewData["Title"] = "Dashboard";

}

<div class="row justify-content-center">
    <div class="col-12">
        <div class="row align-items-center mb-2">
            <div class="col">
                <h2 class="h5 page-title">Bienvenido @Model.Nombres</h2>
                <br>
                <div class="row">
                    <div class="col-md-6 col-xl-3 mb-4">
                        <div class="card shadow">
                            <div class="card-body">
                                <div class="row align-items-center">
                                    <div class="col-3 text-center">
                                        <span class="circle circle-sm bg-primary-light">
                                            <i class="fe fe-16 fe-book text-white mb-0"></i>
                                        </span>
                                    </div>
                                    <div class="col">
                                        <p class="small text-muted mb-0">Informes Recibidos</p>
                                        <span class="h3 mb-0">15</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 col-xl-3 mb-4">
                        <div class="card shadow">
                            <div class="card-body">
                                <div class="row align-items-center">
                                    <div class="col-3 text-center">
                                        <span class="circle circle-sm bg-primary-light">
                                            <i class="fe fe-16 fe-clock text-white mb-0"></i>
                                        </span>
                                    </div>
                                    <div class="col">
                                        <p class="small text-muted mb-0">Informes Pendientes</p>
                                        <span class="h3 mb-0">15</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 col-xl-3 mb-4">
                        <div class="card shadow">
                            <div class="card-body">
                                <div class="row align-items-center">
                                    <div class="col-3 text-center">
                                        <span class="circle circle-sm bg-primary-light">
                                            <i class="fe fe-16 fe-thumbs-up text-white mb-0"></i>
                                        </span>
                                    </div>
                                    <div class="col">
                                        <p class="small text-muted mb-0">Incidencias reportadas</p>
                                        <span class="h3 mb-0">0</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 col-xl-3 mb-4">
                        <div class="card shadow">
                            <div class="card-body">
                                <div class="row align-items-center">
                                    <div class="col-3 text-center">
                                        <span class="circle circle-sm bg-primary-light">
                                            <i class="fe fe-16 fe-user text-white mb-0"></i>
                                        </span>
                                    </div>
                                    <div class="col">
                                        <p class="small text-muted mb-0">Reuniones Realizadas</p>
                                        <span class="h3 mb-0">6</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div> <!-- end section -->
            </div>

        </div>

        <h2>Actividades</h2>
        <div class="row">
            <div class="col-md-8">
                <div class="card shadow eq-card mb-4">
                    <div class="card-body">
                        <div class="card-title">
                            <strong>Clasificación de informes recibidos</strong>
                        </div>
                        <div class="row mt-b">
                            <div class="col-6 text-center mb-3 border-right">
                                <p class="text-muted mb-1">Actas</p>
                                <h6 id="cantActas" class="mb-1"></h6>
                            </div>
                            <div class="col-6 text-center mb-3">
                                <p class="text-muted mb-1">Informes</p>
                                <h6 id="cantInformes" class="mb-1"></h6>
                            </div>

                        </div>
                        <div class="chart-widget">
                            <div id="ClasificacionInformesRecibidos" width="300" height="200"></div>
                        </div>
                    </div> <!-- .card-body -->
                </div> <!-- .card -->
            </div> <!-- .col -->
            <div class="col-md-4">
                <div class="card shadow eq-card mb-4">
                    <div class="card-body">
                        <div class="card-title">
                            <strong>Tipos de Informes Generados</strong>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div id="chart-box" class="mt-3">
                                    <div id="TiposInformesGenerados"></div>
                                </div>
                            </div>
                        </div> <!-- .row -->
                    </div> <!-- .card-body -->
                </div> <!-- .card -->
            </div> <!-- .col-md-4 -->
        </div> <!-- / .row -->

        <div class="row">
            <!-- Recent orders -->
            <div class="col-md-12">
                <div class="card-title">
                    <strong>Informes</strong>
                    <a class="float-right small text-muted" href="#!">Ver Todo</a>
                </div>

                <table class="table table-borderless table-striped">
                    <thead>
                        <tr role="row">
                            <th>ID</th>
                            <th>Clasificacion</th>
                            <th>Tipo</th>
                            <th>Personal</th>
                            <th>Link</th>
                            <th>Comentario</th>
                            <th>Estado</th>
                            <th>FechaCreacion</th>
                            <th>Acción</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Informes.Count == 0)
                        {
                            <tr>
                                <td colspans="5">No hay informes creados</td>
                            </tr>
                        }
                        else
                            @foreach (var item in Model.Informes)
                            {
                                <tr>
                                    <th scope="col">@item.IdInforme</th>
                                    <td>@item.ClasificacionAi</td>
                                    <td>@item.Tipo</td>
                                    <td>@item.IdPersonalNavigation.Nombres @item.IdPersonalNavigation.Apellidos</td>
                                    <td>@item.Link</td>
                                    <td>@item.Comentario</td>
                                    <td><span class="badge badge-primary badge-primary">@item.EstadoInforme</span></td>
                                    <td>@item.FechaCreacion</td>
                                    <td>
                                        <button type="button" class="btn btn-link dropdown-toggle more-vertical p-0 text-muted mx-auto" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            <span class="text-muted sr-only">Action</span>
                                        </button>

                                        <div class="dropdown-menu m-2">
                                            <a class="dropdown-item" href="#"><i class="fe fe-eye fe-12 mr-4"></i>Visualizar</a>
                                            <a class="dropdown-item" href="#"><i class="fe fe-thumbs-up fe-12 mr-4"></i>Aprobar</a>
                                            <a class="dropdown-item" href="#"><i class="fe fe-thumbs-down fe-12 mr-4"></i>Desaprobar</a>
                                        </div>
                                    </td>
                                </tr>
                            }
                    </tbody>
                </table>
            </div> <!-- / .col-md-3 -->
        </div>
    </div> <!-- .row-->
</div> <!-- .col-12 -->
@section scripts
    {
    <script src="~/js/apexcharts.min.js"></script>
    <script src="~/js/Content/IndexPrincipal.js" asp-append-version="true"></script>
}